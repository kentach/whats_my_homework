<%= render "devise/shared/error_messages", resource: resource %>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #f8f9fa;">
  <div class="card shadow p-4" style="max-width: 400px; width: 100%;">
    <h2 class="text-center mb-4">ログイン</h2>

    <%= form_with model: resource, url: session_path(resource_name), local: true do |f| %>
      <!-- 生徒ID -->
      <div class="mb-3">
        <%= f.label :student_id, "生徒ID（6桁）", class: "form-label" %>
        <%= f.text_field :student_id, autofocus: true, autocomplete: "student_id", class: "form-control" %>
      </div>

      <!-- パスワード -->
      <div class="mb-3">
        <%= f.label :password, "パスワード", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: "form-check-input", id: "rememberMe" %>
          <%= f.label :remember_me, "ログイン状態を保持する", class: "form-check-label" %>
        </div>
      <% end %>

      <!-- グラデーションボタン -->
      <div class="d-grid">
        <%= f.submit "ログイン", class: "btn text-white fw-semibold gradient-btn py-2" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
